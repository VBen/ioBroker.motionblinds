{
  "name": "iobroker.motionblinds",
  "version": "0.2.1",
  "description": "ioBroker Adpter to control blind motors from MotionBlinds.",
  "author": "Vben <devel@velmeden.info>",
  "homepage": "https://github.com/VBen/ioBroker.motionblinds",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "template",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VBen/ioBroker.motionblinds.git"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.6.12",
    "motionblinds": "github:VBen/node-motionblinds"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/testing": "^4.1.3",
    "@types/chai": "^4.3.17",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.18.63",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^10.0.20",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "eslint": "^8.57.0",
    "mocha": "^9.2.2",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~4.6.3"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/VBen/ioBroker.motionblinds/issues"
  },
  "directories": {
    "test": "test"
  }
}
